<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--<RelativeLayout-->
    <!--xmlns:android="http://schemas.android.com/apk/res/android"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_width="match_parent"-->
    <!--xmlns:tools="http://schemas.android.com/tools"-->
    <!--xmlns:app="http://schemas.android.com/apk/res-auto">-->

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/toolbar2layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:minHeight="?attr/actionBarSize">

            </android.support.v7.widget.Toolbar>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="About"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!--<Button-->
                <!--android:id="@+id/button"-->
                <!--android:layout_width="40dp"-->
                <!--android:layout_height="40dp"-->
                <!--android:layout_alignBaseline="@+id/textView2"-->
                <!--android:layout_alignBottom="@+id/textView2"-->
                <!--android:layout_alignParentStart="true"-->
                <!--android:background="@drawable/ic_keyboard_arrow_left_black_24dp" />-->
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/dropshadow" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="9dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <Button
            android:id="@+id/profile_staus_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/single_j"
            android:drawablePadding="5dp"
            android:paddingLeft="10dp"
            android:text="About Jeeva"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/colorPageIconFilterItem"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/imageview_hr_line_two"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageview_hr_line">


        </Button>

        <ImageView
            android:id="@+id/imageview_hr_line_two"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorHrLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_staus_btn">

        </ImageView>

        <Button
            android:id="@+id/profile_resume_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/ic_description_black_24dp"
            android:drawablePadding="5dp"
            android:paddingLeft="10dp"
            android:text="Term of Use"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/colorPageIconFilterItem"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageview_hr_line_two" />

        <ImageView
            android:id="@+id/imageview_hr_line_3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorHrLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_resume_btn"></ImageView>

        <Button
            android:id="@+id/privacy_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/ic_lock_yellow_24dp"
            android:drawablePadding="5dp"
            android:paddingLeft="10dp"
            android:text="Privacy Policy"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/colorPageIconFilterItem"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageview_hr_line_two" />

        <ImageView
            android:id="@+id/imageview_hr_line_4"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorHrLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/privacy_btn"></ImageView>

        <Button
            android:id="@+id/contactUs_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/ic_call_black_24dp"
            android:drawablePadding="5dp"
            android:paddingLeft="10dp"
            android:text="Contact Us"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/colorPageIconFilterItem"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageview_hr_line_4" />

        <ImageView
            android:id="@+id/imageview_hr_line_5"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorHrLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contactUs_btn"></ImageView>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
