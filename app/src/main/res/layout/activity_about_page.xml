<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/about_page_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/about_me_page_toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
        android:id="@+id/about_page_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:minHeight="?attr/actionBarSize">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="About"
                android:textSize="20sp"
                android:textColor="@color/titleforall"
                android:textStyle="bold" />
        </android.support.v7.widget.Toolbar>

        <ImageButton
            android:id="@+id/about_page_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:background="@null"
            app:srcCompat="@drawable/ic_keyboard_arrow_left_black_24dp" />

    </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/dropshadow" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="9dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about_me_page_toolbar_container">

        <Button
            android:id="@+id/about_page_about_jeeva_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/single_j"
            android:drawablePadding="5dp"
            android:paddingLeft="10dp"
            android:text="About Jeeva"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/textcolor"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/imageview_hr_line_two"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageview_hr_line">


        </Button>

        <ImageView
            android:id="@+id/imageview_hr_line_two"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorHrLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/about_page_about_jeeva_btn">

        </ImageView>

        <Button
            android:id="@+id/about_page_termofuse_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/ic_description_black_24dp"
            android:drawablePadding="5dp"
            android:paddingLeft="10dp"
            android:text="Term of Use"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/textcolor"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageview_hr_line_two" />

        <ImageView
            android:id="@+id/imageview_hr_line_3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorHrLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/about_page_termofuse_btn"></ImageView>

        <Button
            android:id="@+id/about_page_privacy_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/ic_lock_yellow_24dp"
            android:drawablePadding="5dp"
            android:paddingLeft="10dp"
            android:text="Privacy Policy"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/textcolor"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageview_hr_line_two" />

        <ImageView
            android:id="@+id/imageview_hr_line_4"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorHrLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/about_page_privacy_btn"></ImageView>

        <Button
            android:id="@+id/about_page_contactus_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/ic_call_black_24dp"
            android:drawablePadding="5dp"
            android:paddingLeft="10dp"
            android:text="Contact Us"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/textcolor"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageview_hr_line_4" />

        <ImageView
            android:id="@+id/imageview_hr_line_5"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorHrLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/about_page_contactus_btn"></ImageView>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
